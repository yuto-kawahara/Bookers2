<% if user != current_user %>
  <% if current_user.following?(user) %>
    <%= link_to 'フォロー解除', user_relationships_path(user.id), method: :delete, remote: true, class: "btn-sm btn-danger" %>
  <% else %>
    <%= link_to 'フォローする', user_relationships_path(user.id), method: :post, remote: true, class: "btn-sm btn-success" %>
  <% end %>
<% end %>