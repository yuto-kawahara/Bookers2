<%= render 'searches/search' %>
<div class="row">
  <div class="col-md-3">
    <%= render 'books/new', new_book: @new_book, user: current_user %>
  </div>
  <div class="col-md-8 offset-md-1">
    <h2>Users</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @all_users.each do |user| %>
          <tr>
            <td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %></td>
            <td><%= user.name %></td>
            <td>フォロー数：<%= user.follower.count %></td>
            <td>フォロワー数：<%= user.followed.count %></td>
            <td>
              <% if user != current_user %>
                <% if current_user.following?(user) %>
                  <%= link_to 'フォロー解除', user_relationships_path(user.id), method: :delete, class: "btn-sm btn-danger" %>
                <% else %>
                  <%= link_to 'フォローする', user_relationships_path(user.id), method: :POST, class: "btn-sm btn-success" %>
                <% end %>
              <% end %>
            </td>
            <td><%= link_to "Show", user_path(user.id) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>