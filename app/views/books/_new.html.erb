<h2>User info</h2>
<%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class: "profile_image" %>
<table class="table">
  <tbody>
    <tr></tr>
    <tr>
	    <th>name</th>
	    <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
	    <th><%= user.introduction %></th>
    </tr>
    <tr>
      <th>follows</th>
	    <th>
	      <%= link_to user.follower.count, follows_user_path(user) %>
	    </th>
    </tr>
    <tr>
      <th>followers</th>
	    <th><%= link_to user.followed.count, followers_user_path(user) %></th>
    </tr>
    <tr>
      <th>
        <% if user != current_user %>
          <% if current_user.following?(user) %>
            <%= link_to 'フォロー解除', user_relationships_path(user.id), method: :delete, class: "btn-sm btn-danger" %>
          <% else %>
            <%= link_to 'フォローする', user_relationships_path(user.id), method: :POST, class: "btn-sm btn-success" %>
          <% end %>
        <% end %>
      </th>
    </tr>
  </tbody>
</table>
<%= form_with model: new_book, local:true do |book| %>
  <table>
    <div class="row">
      <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
        <i class="fas fa-user-cog"></i>
      <% end %>
    </div>
    <h2 class="mt-3">New book</h2>
      <div class="form-group">
        <% if new_book.errors.added?(:title, :blank) %>
          <div class="field_with_errors">
            <%= book.label:Title %>
          </div>
          <%= book.text_field :title, class: "form-control" %>
        <% else %>
          <%= book.label:Title %>
          <%= book.text_field :title, class: "form-control" %>
        <% end %>
      </div>
      <div class="form-group">
        <% if new_book.errors.added?(:body, :blank) %>
          <div class="field_with_errors">
            <%= book.label:Opinion %>
          </div>
          <%= book.text_area :body, class: "form-control" %>
        <% else %>
          <%= book.label:Opinion %>
          <%= book.text_area :body, class: "form-control" %>
        <% end %>
      </div>
      <div class="form-group">
        <%= book.submit 'Create Book', class: "btn btn-success" %>
      </div>
  </table>
<% end %>