<div>
  <span>
    <% visitor = notification.visitor %>
    <%= link_to user_path(visitor) do %>
      <%= attachment_image_tag visitor, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:"40x40", class: "rounded-circle bd-placeholder-img align-self-center mx-3"%>
    <% end %>
    <%= notification_form(notification) %>
    <span class="moderate-font"><%= " (#{time_ago_in_words(notification.created_at)} 前)" %></span>
    <br>
    <% if !@comment.nil? %>
      <p class="moderate-font text-center" style="color: #C0C0C0;"><%= @comment %></p>
    <% end %>
    <hr>
  </span>
</div>